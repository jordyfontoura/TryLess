{
  "name": "tryless",
  "version": "1.5.5",
  "description": "Type-safe error handling for TypeScript without try-catch hell",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.esm.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs.js"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "pnpm test:unit && pnpm test:types && pnpm test:integration",
    "test:unit": "vitest run",
    "test:types": "vitest run --config vitest-types.config.ts --typecheck",
    "test:integration": "pnpm test:node && pnpm test:browser && pnpm test:shared",
    "test:node": "vitest run --config ./e2e/node/vitest.config.ts",
    "test:browser": "vitest run --config ./e2e/browser/vitest.config.ts",
    "test:shared": "vitest run --config ./e2e/shared/vitest.config.ts",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "build": "tsc --project tsconfig.build.json && rollup -c",
    "lint": "eslint",
    "copy-readme": "cp ../README.md ./README.md",
    "prepublishOnly": "npm run build && npm run copy-readme"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jordyfontoura/tryless.git"
  },
  "author": "jordyfontoura",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jordyfontoura/tryless/issues"
  },
  "homepage": "https://github.com/jordyfontoura/tryless#readme",
  "devDependencies": {
    "@eslint/js": "^9.7.0",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/node": "^20.14.10",
    "@vitest/browser": "^4.0.2",
    "@vitest/browser-playwright": "^4.0.2",
    "@vitest/ui": "^4.0.2",
    "eslint": "9.x",
    "playwright": "^1.56.1",
    "rimraf": "^6.0.1",
    "rollup": "^4.39.0",
    "rollup-plugin-dts": "^6.2.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^7.16.1",
    "vitest": "^4.0.2"
  },
  "keywords": [
    "result",
    "result-type",
    "error-handling",
    "type-safe",
    "typescript",
    "rust-inspired",
    "functional-programming",
    "railway-oriented",
    "async-error-handling",
    "promise",
    "no-throw",
    "either",
    "option",
    "monad",
    "error-management",
    "exception-handling",
    "fp",
    "functional",
    "nodejs",
    "zero-dependencies"
  ]
}